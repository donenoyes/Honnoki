<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smartRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reader.VerticalScrollingReaderFragment">

    <com.scwang.smart.refresh.header.ClassicsHeader
        android:id="@+id/refreshHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlPrimaryColor="@color/white"
        app:srlAccentColor="@color/colorPrimary"
        app:srlTextPulling="Pull up to load previous chapter"
        app:srlTextRelease="Pull up to load previous chapter"
        app:srlTextRefreshing="Loading ..."
        app:srlEnableLastTime="false">

    </com.scwang.smart.refresh.header.ClassicsHeader>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.reader.SwipeReaderFragment" />

    <com.flamyoad.honnoki.ui.reader.widgets.SwipeReaderTopIndicator
        android:id="@+id/topIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</com.scwang.smart.refresh.layout.SmartRefreshLayout>


